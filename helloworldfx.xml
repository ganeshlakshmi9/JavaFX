    <pathelement location="${path.variable.maven_repository}/org/hibernate/javax/persistence/hibernate-jpa-2.1-api/1.0.0.Final/hibernate-jpa-2.1-api-1.0.0.Final.jar"/>
  </path>
  
  <path id="library.maven:_org.hibernate:hibernate-core:5.2.10.final.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hibernate/hibernate-core/5.2.10.Final/hibernate-core-5.2.10.Final.jar"/>
  </path>
  
  <path id="library.maven:_org.javassist:javassist:3.20.0-ga.classpath">
    <pathelement location="${path.variable.maven_repository}/org/javassist/javassist/3.20.0-GA/javassist-3.20.0-GA.jar"/>
  </path>
  
  <path id="library.maven:_org.jboss.logging:jboss-logging:3.3.0.final.classpath">
    <pathelement location="${path.variable.maven_repository}/org/jboss/logging/jboss-logging/3.3.0.Final/jboss-logging-3.3.0.Final.jar"/>
  </path>
  
  <path id="library.maven:_org.jboss.spec.javax.transaction:jboss-transaction-api_1.2_spec:1.0.1.final.classpath">
    <pathelement location="${path.variable.maven_repository}/org/jboss/spec/javax/transaction/jboss-transaction-api_1.2_spec/1.0.1.Final/jboss-transaction-api_1.2_spec-1.0.1.Final.jar"/>
  </path>
  
  <path id="library.maven:_org.jboss:jandex:2.0.3.final.classpath">
    <pathelement location="${path.variable.maven_repository}/org/jboss/jandex/2.0.3.Final/jandex-2.0.3.Final.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module slate-application -->
  
  <dirname property="module.slate-application.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.slate-application" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.slate-application" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.slate-application" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.slate-application" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="slate-application.output.dir" value="${module.slate-application.basedir}/target/classes"/>
  <property name="slate-application.testoutput.dir" value="${module.slate-application.basedir}/target/test-classes"/>
  
  <path id="slate-application.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="slate-application.module.production.classpath">
    <path refid="${module.jdk.classpath.slate-application}"/>
    <pathelement location="${basedir}/../../../../slate-application/src/main/resources"/>
    <path refid="library.maven:_org.hibernate:hibernate-core:5.2.10.final.classpath"/>
    <path refid="library.maven:_org.jboss.logging:jboss-logging:3.3.0.final.classpath"/>
    <path refid="library.maven:_org.hibernate.javax.persistence:hibernate-jpa-2.1-api:1.0.0.final.classpath"/>
    <path refid="library.maven:_org.javassist:javassist:3.20.0-ga.classpath"/>
    <path refid="library.maven:_antlr:antlr:2.7.7.classpath"/>
    <path refid="library.maven:_org.jboss.spec.javax.transaction:jboss-transaction-api_1.2_spec:1.0.1.final.classpath"/>
    <path refid="library.maven:_org.jboss:jandex:2.0.3.final.classpath"/>
    <path refid="library.maven:_com.fasterxml:classmate:1.3.0.classpath"/>
    <path refid="library.maven:_dom4j:dom4j:1.6.1.classpath"/>
    <path refid="library.maven:_org.hibernate.common:hibernate-commons-annotations:5.0.1.final.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.5.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:5.1.6.classpath"/>
  </path>
  
  <path id="slate-application.runtime.production.module.classpath">
    <pathelement location="${slate-application.output.dir}"/>
    <pathelement location="${basedir}/../../../../slate-application/src/main/resources"/>
    <path refid="library.maven:_org.hibernate:hibernate-core:5.2.10.final.classpath"/>
    <path refid="library.maven:_org.jboss.logging:jboss-logging:3.3.0.final.classpath"/>
    <path refid="library.maven:_org.hibernate.javax.persistence:hibernate-jpa-2.1-api:1.0.0.final.classpath"/>
    <path refid="library.maven:_org.javassist:javassist:3.20.0-ga.classpath"/>
    <path refid="library.maven:_antlr:antlr:2.7.7.classpath"/>
    <path refid="library.maven:_org.jboss.spec.javax.transaction:jboss-transaction-api_1.2_spec:1.0.1.final.classpath"/>
    <path refid="library.maven:_org.jboss:jandex:2.0.3.final.classpath"/>
    <path refid="library.maven:_com.fasterxml:classmate:1.3.0.classpath"/>
    <path refid="library.maven:_dom4j:dom4j:1.6.1.classpath"/>
    <path refid="library.maven:_org.hibernate.common:hibernate-commons-annotations:5.0.1.final.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.5.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:5.1.6.classpath"/>
  </path>
  
  <path id="slate-application.module.classpath">
    <path refid="${module.jdk.classpath.slate-application}"/>
    <pathelement location="${slate-application.output.dir}"/>
    <pathelement location="${basedir}/../../../../slate-application/src/main/resources"/>
    <path refid="library.maven:_org.hibernate:hibernate-core:5.2.10.final.classpath"/>
    <path refid="library.maven:_org.jboss.logging:jboss-logging:3.3.0.final.classpath"/>
    <path refid="library.maven:_org.hibernate.javax.persistence:hibernate-jpa-2.1-api:1.0.0.final.classpath"/>
    <path refid="library.maven:_org.javassist:javassist:3.20.0-ga.classpath"/>
    <path refid="library.maven:_antlr:antlr:2.7.7.classpath"/>
    <path refid="library.maven:_org.jboss.spec.javax.transaction:jboss-transaction-api_1.2_spec:1.0.1.final.classpath"/>
    <path refid="library.maven:_org.jboss:jandex:2.0.3.final.classpath"/>
    <path refid="library.maven:_com.fasterxml:classmate:1.3.0.classpath"/>
    <path refid="library.maven:_dom4j:dom4j:1.6.1.classpath"/>
    <path refid="library.maven:_org.hibernate.common:hibernate-commons-annotations:5.0.1.final.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.5.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:5.1.6.classpath"/>
  </path>
  
  <path id="slate-application.runtime.module.classpath">
    <pathelement location="${slate-application.testoutput.dir}"/>
    <pathelement location="${slate-application.output.dir}"/>
    <pathelement location="${basedir}/../../../../slate-application/src/main/resources"/>
    <path refid="library.maven:_org.hibernate:hibernate-core:5.2.10.final.classpath"/>
    <path refid="library.maven:_org.jboss.logging:jboss-logging:3.3.0.final.classpath"/>
    <path refid="library.maven:_org.hibernate.javax.persistence:hibernate-jpa-2.1-api:1.0.0.final.classpath"/>
    <path refid="library.maven:_org.javassist:javassist:3.20.0-ga.classpath"/>
    <path refid="library.maven:_antlr:antlr:2.7.7.classpath"/>
    <path refid="library.maven:_org.jboss.spec.javax.transaction:jboss-transaction-api_1.2_spec:1.0.1.final.classpath"/>
    <path refid="library.maven:_org.jboss:jandex:2.0.3.final.classpath"/>
    <path refid="library.maven:_com.fasterxml:classmate:1.3.0.classpath"/>
    <path refid="library.maven:_dom4j:dom4j:1.6.1.classpath"/>
    <path refid="library.maven:_org.hibernate.common:hibernate-commons-annotations:5.0.1.final.classpath"/>
    <path refid="library.maven:_org.apache.commons:commons-lang3:3.5.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:5.1.6.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.slate-application">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.slate-application">
    <patternset refid="excluded.from.module.slate-application"/>
  </patternset>
  
  <path id="slate-application.module.sourcepath">
    <dirset dir="${module.slate-application.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.slate-application" depends="compile.module.slate-application.production,compile.module.slate-application.tests" description="Compile module slate-application"/>
  
  <target name="compile.module.slate-application.production" depends="register.custom.compilers" description="Compile module slate-application; production classes">
    <mkdir dir="${slate-application.output.dir}"/>
    <javac2 destdir="${slate-application.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.slate-application}/javac">
      <compilerarg line="${compiler.args.slate-application}"/>
      <bootclasspath refid="slate-application.module.bootclasspath"/>
      <classpath refid="slate-application.module.production.classpath"/>
      <src refid="slate-application.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.slate-application"/>
    </javac2>
    
    <copy todir="${slate-application.output.dir}">
      <fileset dir="${module.slate-application.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.slate-application.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.slate-application.tests" depends="register.custom.compilers,compile.module.slate-application.production" description="compile module slate-application; test classes" unless="skip.tests"/>
  
  <target name="clean.module.slate-application" description="cleanup module">
    <delete dir="${slate-application.output.dir}"/>
    <delete dir="${slate-application.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.slate-application, clean.artifact.slate-application" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.slate-application" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.slate-application" value="${basedir}/out/artifacts/slate_application"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.slate_application" value="${artifacts.temp.dir}/slate_application.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.slate-application" description="clean slate-application artifact output">
    <delete dir="${artifact.output.slate-application}"/>
  </target>
  
  <target name="artifact.slate-application" depends="init.artifacts, compile.module.slate-application" description="Build &#39;slate-application&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.slate-application}"/>
    <copy todir="${artifact.temp.output.slate_application}">
      <fileset dir="${slate-application.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_slate_application" dir="${artifact.temp.output.slate_application}" includes="**/*.jar">
      <exclude name="slate_application.jar"/>
    </fx:fileset>
    <fx:fileset id="all_slate_application" dir="${artifact.temp.output.slate_application}" includes="**/*.jar"/>
    <fx:application id="slate_application_id" name="slate-application" mainClass="com.kiran.Main"/>
    <fx:jar destfile="${artifact.temp.output.slate_application}/slate_application.jar">
      <fx:application refid="slate_application_id"/>
      <fileset dir="${artifact.temp.output.slate_application}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_slate_application"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="SLATE"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.slate_application}/deploy" outfile="slate_application" nativeBundles="dmg">
      <fx:application refid="slate_application_id"/>
      <fx:info title="SLATE"/>
      <fx:resources>
        <fx:fileset refid="all_slate_application"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.slate-application}">
      <fileset dir="${artifact.temp.output.slate_application}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.slate_application}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.slate-application" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>