                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox spacing="10.0">
               <children>
                  <TextField promptText="username" />
                  <PasswordField promptText="password" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="login" mnemonicParsing="false" onAction="#loginButtonClicked" text="Login" />
                  <Button layoutX="344.0" layoutY="10.0" mnemonicParsing="false" text="Sign Up" />
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TextArea fx:id="outputBox" editable="false" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Welcome to SLATE.">
               <HBox.margin>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
